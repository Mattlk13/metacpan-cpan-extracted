#!/usr/bin/env perl
# PODNAME: mutool
# ABSTRACT: Command mutool of Alien-MuPDF

$|=1;

use strict;
use warnings;
use File::ShareDir ':ALL';
use Path::Class;

my $abs = file(dist_dir('Alien-MuPDF'),'bin','mutool')->cleanup->absolute;

exec($abs, @ARGV) or print STDERR "couldn't exec mutool: $!";

__END__

