use alienfile;

probe sub { 'share' };

share {

  start_url 'https://github.com/Perl5-Alien/dontpanic.git';

  download [
    [ "git clone --bare %{.meta.start_url}" ]
  ];

  extract [
    [ "git clone %{.install.download}" ]
  ];

  plugin 'Build::Autoconf';

  build [
    'git checkout v1.00',
    'bash autogen.sh',
    '%{configure} --disable-shared',
    '%{make}',
    '%{make} install',
  ];


};
