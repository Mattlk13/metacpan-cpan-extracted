 % bpom-tampilkan-ing --carbohydrate 13.113 --color never --fat 0.223 --output-format vertical_text_table --package-size 20 --protein 0.99 --saturated-fat 0.01 --serving-size 175 --sodium 0.223 --sugar 7.173
