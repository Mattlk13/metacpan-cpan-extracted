NAME

    Mojolicious::Plugin::Prove - run test scripts via browser

VERSION

    version 0.11

SYNOPSIS

      # Mojolicious::Lite
      plugin 'Prove' => {
          tests => {
              my_tests => '/path/to/test/files.t',
          },
      };
    
      # Mojolicious
      $app->plugin( 'Prove' => {
          tests => {
              my_tests => '/path/to/test/files.t',
          },
      });
    
      # Access
      http://localhost:3000/prove
      
      # Prefix
      plugin 'Prove' => {
          tests => {
              my_tests => '/path/to/test/files.t',
          },
          prefix => 'tests',
      };

