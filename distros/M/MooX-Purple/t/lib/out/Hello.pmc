package Hello;
use Moo;
use MooX::LazierAttributes;
use MooX::ValidateSubs;
use Data::LnArray qw/arr/;
with qw/World/;
use Scalar::Util qw/reftype/;
use JSON;

use Types::Standard qw/Str HashRef ArrayRef Object/;

has one => (
	is      => "ro",
	default => sub { { okay => 'one' } }
);

has two => (
	is      => "rw",
	isa     => Str,
	default => sub {'the world is flat'}
);

has three => (
	is      => "rw",
	isa     => Str,
	default => sub {'the world is flat'}
);

validate_subs four => { params => { message => [ Str, sub {'four'} ] } };

sub four {
	my ($self) = shift;
	return $_[0]->{message};
}

sub five {
	my ($self)  = shift;
	my $caller  = caller();
	my @allowed = qw(main);
	unless ( $caller eq __PACKAGE__ || grep { $_ eq $caller } @allowed ) {
		die "cannot call private method five from $caller";
	}
	return $self->six;
}

sub ten {
	my ($self) = shift;
	reftype bless {}, 'Flat::World';
}

sub eleven {
	my ($self) = shift;
	encode_json { flat => "world" };
}
1;

