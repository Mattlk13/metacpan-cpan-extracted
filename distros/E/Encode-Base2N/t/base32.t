use 5.012;
use warnings;
use Test::More;
use Test::Catch;
use lib 't/lib'; use MyTest;
use Encode::Base2N qw/encode_base32 encode_base32low decode_base32/;

catch_run('[base32]');

my $str = join('', map {chr($_)} 0..255);

my $enc = encode_base32($str);
my $encl = encode_base32low($str);

my $encR = "";

is $encR, $enc;
is lc($enc), $encl;

is decode_base32($enc), $str;
is decode_base32($encl), $str;

done_testing();
