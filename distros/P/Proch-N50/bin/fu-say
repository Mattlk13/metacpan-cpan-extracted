#!/usr/bin/env perl
# ABSTRACT: Testing module
# PODNAME: fu-say

use 5.012;
use warnings FATAL => 'all';
use Getopt::Long;
use FASTX::Reader;
use File::Basename;
use FindBin qw($RealBin);

my $STDOUT = "OK";
GetOptions(
    'fail' => \my $opt_fail,
    'version' => \my $opt_version,
    's|string=s' => \$STDOUT,
) || die "Unknown/Wrong parameters\n";

if ($opt_version) {
    say "fu-say";
    say STDERR "Using FASTX::Reader=", $FASTX::Reader::VERSION;
    exit(0);
}
say STDERR $FASTX::Reader::VERSION;
say STDOUT "$STDOUT";
defined $opt_fail ? exit(1) : exit(0);

__END__

=pod

=encoding UTF-8

=head1 NAME

fu-say - Testing module

