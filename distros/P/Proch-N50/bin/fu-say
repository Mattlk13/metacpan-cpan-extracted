#!/usr/bin/env perl
# ABSTRACT: Testing module
# PODNAME: fu-say

use 5.012;
use warnings FATAL => 'all';
use Getopt::Long;
use FASTX::Reader;
use File::Basename;
use FindBin qw($RealBin);

if (defined $ARGV[0] and $ARGV[0] =~/^-?-?version/) {
    say "fu-say \$VERSION";
    say STDERR "Using FASTX::Reader=", $FASTX::Reader::VERSION;
    exit(0)
}
say STDERR $FASTX::Reader::VERSION;
say STDOUT "OK";
defined $ARGV[0] ? exit(1) : exit(0);

__END__

=pod

=encoding UTF-8

=head1 NAME

fu-say - Testing module

=head1 VERSION

version 1.5.5

