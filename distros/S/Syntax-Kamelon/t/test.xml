<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="Test" version="0.1" kateversion="0.0" section="Test">

<highlighting>
<list name="colours">
	<item> black </item>
	<item> blue </item>
	<item> green </item>
	<item> red </item>
	<item> yellow </item>
</list>
<contexts>
  <context name="Start" attribute="Normal Text" lineEndContext="#stay">
      <Detect2Chars attribute="Normal Text" context="Test1" char="{" char1 ="#"/>
      <Detect2Chars attribute="Normal Text" context="##Test2" char="[" char1 ="#"/>
      <DetectChar attribute="CDATA" context="#stay" char= "#"/>
		<WordDetect attribute="Element" context="#stay" String="WordDetect" />
		<Detect2Chars attribute="Value" context="#stay" char="i" char1="n" />
		<HlCOct attribute="Comment" context="#stay" />
		<HlCHex attribute="Attribute" context="#stay" />
 		<Float attribute="EntityRef" context="#stay" />
		<HlCChar attribute="Error" context="#stay" />
		<HlCStringChar attribute="PEntityRef" context="#stay" />
		<Int attribute="PEntityRef" context="#stay" />
 		<keyword attribute="Element" context="#stay" String="colours"/>
		<LineContinue attribute="Element" context="#stay" />

		<RangeDetect attribute="Processing" context="#stay" char="a" char1="d"  />
		<RegExpr attribute="Element" context="#stay" String="&lt;#&gt;" />
		<StringDetect attribute="Element" context="#stay" String="der" />
		<IncludeRules context="Test2" />
		<IncludeRules context="##Test3" /> 
  </context>
  <context name="Test1" attribute="Value" lineEndContext="#stay">
      <Detect2Chars attribute="Normal Text" context="#pop" char="#" char1="}"/>
  </context>
  <context name="Test2" attribute="Value" lineEndContext="#stay">
      <Detect2Chars attribute="Value" context="#stay" char="%" char1="^"/>
  </context>
</contexts>
<itemDatas>
  <itemData name="Normal Text" defStyleNum="dsNormal" />
  <itemData name="Other Text" defStyleNum="dsNormal" />
  <itemData name="Comment" defStyleNum="dsComment" spellChecking="false" />
  <itemData name="CDATA" defStyleNum="dsBaseN" bold="1" spellChecking="false" />
  <itemData name="Processing" defStyleNum="dsKeyword" spellChecking="false" />
  <itemData name="Doctype" defStyleNum="dsDataType" bold="1" spellChecking="false" />
  <itemData name="Element" defStyleNum="dsKeyword" spellChecking="false" />
  <itemData name="Attribute" defStyleNum="dsOthers" spellChecking="false" />
  <itemData name="Value" defStyleNum="dsString" color="#a00" spellChecking="false" />
  <itemData name="EntityRef" defStyleNum="dsDecVal" spellChecking="false" />
  <itemData name="PEntityRef" defStyleNum="dsDecVal" spellChecking="false" />
  <itemData name="Error" defStyleNum="dsError" spellChecking="false" />
</itemDatas>

</highlighting>
</language>
