# -*- cperl -*-
# ABSTRACT: LaTeX variable (math) object

=head1 SYNOPSYS

Represents a LaTeX math variable

=cut

use strict;
use warnings;
package SpeL::Object::Variable;

use parent 'Exporter';
use Carp;

use SpeL::I18n;

use Data::Dumper;

=method new()

We keep the default method, as the object is generated by the parser.

=cut

=method read( level )

returns a string with the spoken version of the node

=over 4

=item level: parsing level

=back

=cut

sub read {
  my $self = shift;
  my ( $level ) = @_;

  my $line;
  if( exists $self->{Greek} ) {
    $self->{Greek} =~ s/\\(?:mit|mup)?//;
    $self->{Greek} =~ s/\\(?:var)?//;
    $line = $SpeL::I18n::lh->maketext( lc( $self->{Greek} ) );
  }
  else {
    $line = '"' . $self->{Alphabet} . '"';
  }
  if ( exists $self->{Subscript} ) {
    $line .= $self->{Subscript}->read( $level + 1 );
  }
  return $line;
}

1;
