# -*- cperl -*-
# ABSTRACT: LaTeX power object

=head1 SYNOPSYS

Represents a LaTeX power

=cut

package SpeL::Object::Power;

use SpeL::I18n;
use SpeL::Object::MathGroup;

use parent 'Exporter';
use Carp;

use Data::Dumper;

=method new()

We keep the default method, as the object is generated by the parser.

=cut

=method read( level )

returns a string with the spoken version of the node

=over 4

=item level: parsing level

=back

=cut

sub read {
  my $self = shift;
  my ( $level ) = @_;

  if( exists $self->{Transpose} ) {
    return $SpeL::I18n::lh->maketext( "Transposed" ) . ',';
  }
  
  return $SpeL::I18n::lh->maketext( "Power",
				    $self->{Lit} // $self->{Group}->read( $level + 1 ) ) . ', ';
}

1;
