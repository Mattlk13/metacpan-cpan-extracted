                <style type="text/css">
			html{
				background-color:black;
				margin:0;
				padding:0;
				font-size:3px;
				min-width:100%;
				min-height:100%;
				display:flex;
				flex:1;
			}
			body{
				margin:0;
				padding:0;
				display:flex;
				flex:1;
				justify-content:center;
				background-color:#353535;
			}

			#app{
				display:flex;
				flex:1;
				justify-content:center;
			}
                </style>
        </head>
        <body>
		<div id="app">
				
		</div>
		<div id="fallback" style="visibility:hidden">
			<ul>
				<li><a href="https://www.google.com/chrome/">Install Chrome</a></li>
				<li><a href="https://www.mozilla.org/en-US/firefox/new/">Install Firefox</a></li>
			</ul>
		</div>

                <script type="text/javascript">
                	window.addEventListener('load',()=>{
				var app;
				var fb=document.getElementById("fallback");
				if (document.body.attachShadow == undefined) {
					console.log( "Browser does not support this website correctly");
				fb.style.visibility="visible";
				}	
				else {
					loader.loadComponent('/components/common/app.js',{type:"COM"},(mod)=>{
						fb.parentElement.removeChild(fb);//style.visibility="visible";
						console.log(mod);
						console.log('module loaded',mod.component);
						app=new mod.component({},document.getElementById('app'));
				});
				}
                });
                </script>
        </body>
</html>

