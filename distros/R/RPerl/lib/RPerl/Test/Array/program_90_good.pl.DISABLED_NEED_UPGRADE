# [[[ HEADER ]]]
use RPerl;
use strict;
use warnings;
our $VERSION = 0.001_000;

# [[[ CRITICS ]]]
## no critic qw(ProhibitUselessNoCritic ProhibitMagicNumbers RequireCheckedSyscalls)  # USER DEFAULT 1: allow numeric values & print operator
## no critic qw(RequireInterpolationOfMetachars)  # USER DEFAULT 2: allow single-quoted control characters & sigils

# [[[ SUBROUTINES ]]]

sub modify_array {
    { my void $RETURN_TYPE };
    ( my array @array_1D_input ) = @ARG;

    print 'in modify_array, received @array_1D_input =      ', integer_arrayref_to_string(\@array_1D_input), "\n";
    $array_1D_input[2] = 99;

    print 'in modify_array, have modified @array_1D_input = ', integer_arrayref_to_string(\@array_1D_input), "\n";
    return;
}

# [[[ OPERATIONS ]]]

my integer_arrayref @array_1D = ( 0, 2, 4, 6, 8 );

print 'in main(), have pre-moddify @array_1D = ', integer_arrayref_to_string(\@array_1D), "\n";

modify_array(@array_1D);

print 'in main(), have post-modify @array_1D = ', integer_arrayref_to_string(\@array_1D), "\n";
