int main() {  // [[[ OPERATIONS HEADER ]]]


// [[[ OPERATIONS ]]]
    integer foo = 21 + 12;
    integer bar = 23 * 42;
    number baz = to_number(bar) / foo;
    number zab = to_number(foo) / bar;
    print "have $foo = " << To_string(foo) << endl;
    print "have $bar = " << To_string(bar) << endl;
    print "have $baz = " << To_string(baz) << endl;
    print "have $zab = " << To_string(zab) << endl;



    // [[[ OPERATIONS FOOTER ]]]
    return 0;
}

