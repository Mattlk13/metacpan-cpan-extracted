#!/usr/bin/perl

use strict;
use warnings;

use Data::Dumper;
use Data::RecordStore;
use File::Copy;
use File::Path qw( make_path );

die "$0 : requires Data::RecordStore version of at least 5" unless $Data::RecordStore::VERSION >= 5;

my( $source_dir, $dest_dir, $working_dir ) = @ARGV;
eval {
    Data::RecordStore::Converter->convert( $source_dir, $dest_dir, $working_dir );
};
if( $@ ) {
    print STDERR "$0 : $@\n";
}

exit;
