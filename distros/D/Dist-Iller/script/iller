#!perl
use 5.10.0;
use strict;
use warnings;

use Dist::Iller;

our $AUTHORITY = 'cpan:CSSON'; # AUTHORITY
# PODNAME: iller, a dzil wrapper
our $VERSION = '0.1409';

my $iller = Dist::Iller->new;
$iller->parse('first');
$iller->parse('before');
$iller->generate_files('before');

system('dzil', @ARGV);

$iller->parse('after');
$iller->generate_files('after');

__END__

=pod

=encoding UTF-8

=head1 NAME

iller, a dzil wrapper

